<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="2dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:focusable="true"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/service_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:paddingLeft="@dimen/padding_places_name"
                android:paddingRight="@dimen/padding_places_name"
                android:paddingTop="@dimen/padding_places_name"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="Service Name"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/blackgrey" />

            <TextView
                android:id="@+id/service_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_name"
                android:gravity="start|center_vertical"
                android:text="Price"
                android:padding="@dimen/padding_places_address"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/blackgrey"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>